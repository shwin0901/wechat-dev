/* pages/home/home.wxss */

/* 轮播图 */
.homeSwiper {
  width: 100%;
  height: 300rpx;
}

.homeSwiper swiper-item image {
  width: 100%;
  height: 100%;
}

/* 导航图标 */
.homeNavContainer {
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding: 24rpx 0;
}

.navIcon {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.navIcon .iconfont {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #e26514;
  line-height: 64rpx;
  text-align: center;
  color: white;
  font-size: 32rpx;
}

.navIcon .iconText {
  font-size: 24rpx;
  padding-top: 12rpx;
}

/* 推荐歌单 */
.homeSongList {
  padding: 20rpx 0;
  margin: 20rpx 0;
  border-top: 1rpx solid #f5f5f5;
}



.SongContent {
  display: flex;
  height: 300rpx;
}

.SongContent .SongContentItem {
  width: 200rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  padding-left: 24rpx;
}

.SongContent .SongContentItem image {
  width: 200rpx;
  height: 200rpx;
}

.SongContent .SongContentItem text {
  font-size: 20rpx;
  font-weight: 400;
  /* 单行文本溢出隐藏 */
  /* display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; */

  /* 多行文本溢出隐藏 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  /* 设置对其模式 */
  -webkit-box-orient: vertical; 
  /* 设置多行行树 */
  -webkit-line-clamp: 2;
}


.topList {
  padding: 20rpx 0;
}

.topListSwiper {
  height: 400rpx;
}

.swiperItem {
  width: 96%;
  background: #fbfbfb;
}
.swiperItem .title {
  font-size: 30rpx;
  line-height: 80rpx;

}

.musicItem {
  /* 当一个元素设置为flex，其子元素会自动成为block元素*/
  display: flex;
  margin-bottom: 20rpx;
}

.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}

.musicItem .count {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

.musicItem .musicName {
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}